<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <% if params[:plan] == '2' %>
      <h1>Pro Acccount</h1>
      <p>Sign up for the pro account for $9.99 and get accessto the community and contact information</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up and get for free basic access to the community.</p>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      <% if params[:plan] == '2' %>
        <%= render "pro_form"%>
      <% else %>
        <%= render "basic_form"%>
      <% end %>
    </div>
</div>
</div>
